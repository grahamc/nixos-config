       map_to_output eDP-1
}

# Treat external kinesis keyboards as US, since they are in hardware
# dvorak mode. This is because of RDP, VNC, etc.
input '10730:258:Kinesis_Advantage2_Keyboard' xkb_layout us
input '1523:7:HID_05f3:0007' xkb_layout us
input '1452:516:HID_05ac:0204' xkb_layout us

output '*' {
       background @bgimage@ fill
}

