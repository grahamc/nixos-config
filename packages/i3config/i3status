general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless wlp2s0"
order += "path_exists channel"
order += "volume master"
order += "battery 0"
order += "tztime berlin"
order += "tztime local"

volume master {
        format = "ğŸ”Š%volume"
        format_muted = "ğŸ”‡(%volume)"
        device = "pulse"
}

wireless wlp2s0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

path_exists channel {
        format = ""
        format_down = "Upgrade!"
        path = "/var/lib/is-nix-channel-up-to-date/up-to-date"
}

battery 0 {
        format = "%status%percentage %remaining"
        format_down = "No battery"
        status_chr = "ğŸ”Œ" # (AC power plug UTF-8 glyph)
        status_bat = "ğŸ”‹" # (Battery glyph)
        status_full = "ğŸ‘" # (Thumbs up glyph)
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10

   	last_full_capacity = true
	integer_battery_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S %Z"
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}
